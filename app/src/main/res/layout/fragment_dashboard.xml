                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_round_green"
                            android:text="ZPL LEVEL: 0"
                            android:textColor="#fff"
                            android:textAlignment="center"
                            android:layout_margin="10dp"
                            android:padding="10dp"/>

                        <TextView
